<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CombatFragment">

    <LinearLayout
        android:id="@+id/Pokemon1data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_orange"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Pokemon2data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.25">

        <TextView
            android:id="@+id/Pokemon1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/viridian"
            android:fontFamily="@font/ketchum"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Pokémon1"
            android:textColor="@color/light_orange"

            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon1HPTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="HP:"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Pokemon1HP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon1AtaqueTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="ATAQUE:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon1Ataque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textAlignment="viewStart"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon1DefensaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="DEFENSA:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon1Defensa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon1AtaqueEspecialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="ATAQUE ESPECIAL:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon1AtaqueEspecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon1DefensaEspecialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="DEFENSA ESPECIAL:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon1DefensaEspecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/Pokemon2data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_orange"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/CombatTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Pokemon1data"
        app:layout_constraintVertical_weight="0.25">

        <TextView
            android:id="@+id/Pokemon2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/viridian"
            android:fontFamily="@font/ketchum"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Pokémon2"
            android:textColor="@color/light_orange"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon2HPTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="HP:"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Pokemon2HP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon2AtaqueTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="ATAQUE:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon2Ataque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon2DefensaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="DEFENSA:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon2Defensa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon2AtaqueEspecialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="ATAQUE ESPECIAL:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon2AtaqueEspecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Pokemon2DefensaEspecialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="DEFENSA ESPECIAL:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Pokemon2DefensaEspecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="999"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/CombatTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/light_red"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:text="Mostrando información del combate!!!"
        android:textColor="@color/light_orange"
        android:fontFamily="@font/ketchum_italic"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pokemon2data"
        app:layout_constraintVertical_weight="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>