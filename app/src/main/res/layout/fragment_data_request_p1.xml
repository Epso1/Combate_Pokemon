<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataRequestP1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_orange">

        <TextView
            android:id="@+id/P1Title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/light_orange"
            android:fontFamily="@font/ketchum_italic"
            android:gravity="center"
            android:padding="10dp"
            android:text="Introduce los datos del PoKÃ©MoN 1:"
            android:textColor="@color/viridian"
            android:textSize="30dp"

            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@id/P1NameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/P1NameLayout"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/viridian"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/P1HPLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P1Title">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Nombre:"
                android:textColor="@color/light_orange"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/P1NameEditText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:hint="Introduce Nombre"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="@color/light_orange"
                android:textColorHint="@color/light_red"
                android:textSize="18dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/P1HPLayout"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/viridian"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/P1AtaqueLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P1NameLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="HP:"
                android:textColor="@color/light_orange"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/P1HPEditText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:hint="Valor entero entre 0 y 999"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="@color/light_orange"
                android:textColorHint="@color/light_red"
                android:textSize="18dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/P1AtaqueLayout"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/viridian"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/P1DefensaLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P1HPLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Ataque:"
                android:textColor="@color/light_orange"
                android:textColorHint="@color/light_red"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/P1AtaqueEditText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:hint="Valor entero entre 0 y 999"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="@color/light_orange"
                android:textColorHint="@color/light_red"
                android:textSize="18dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/P1DefensaLayout"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/viridian"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/P1AtaqueEspecialLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P1AtaqueLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Defensa:"
                android:textColor="@color/light_orange"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/P1DefensaEditText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:hint="Valor entero entre 0 y 999"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="@color/light_orange"
                android:textColorHint="@color/light_red"
                android:textSize="18dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/P1AtaqueEspecialLayout"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/viridian"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/P1DefensaEspecialLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P1DefensaLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Ataque Especial:"
                android:textColor="@color/light_orange"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/P1AtaqueEspecialEditText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:hint="Valor entero entre 0 y 999"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="@color/light_orange"
                android:textColorHint="@color/light_red"
                android:textSize="18dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/P1DefensaEspecialLayout"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/viridian"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/aceptarButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P1AtaqueEspecialLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Defensa Especial:"
                android:textColor="@color/light_orange"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/P1DefensaEspecialEditText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:hint="Valor entero entre 0 y 999"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="@color/light_orange"
                android:textColorHint="@color/light_red"
                android:textSize="18dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/aceptarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_red"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Aceptar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P1DefensaEspecialLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>